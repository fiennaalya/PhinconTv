<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.dashboard.checkout.CheckoutFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_back_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#003366"
        android:contentDescription="@string/no_text"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_arrow_white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/deep_blue"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/divider_checkout_appBar"
        app:layout_constraintStart_toEndOf="@id/cv_back_checkout"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tv_checkout" />

    <View
        android:id="@+id/divider_checkout_appBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#000000"
        android:backgroundTint="@color/sky_blue"
        app:layout_constraintTop_toBottomOf="@+id/cv_back_checkout" />

    <TextView
        android:id="@+id/tv_checkout_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/deep_blue"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_checkout_appBar"
        tools:text="@string/tv_checkout_items" />

    <ScrollView
        android:id="@+id/layout_scroll_checkout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/dividerBottom_checkout_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkout_items">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_checkout"
                tools:listitem="@layout/item_list_checkout"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <TextView
                android:id="@+id/tv_payment_checkout"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/deep_blue"
                android:fontFamily="@font/poppins_semibold"
                tools:text="@string/tv_payment" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/ic_coin_blue" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_your_token_checkout"
                            android:textColor="@color/deep_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_semibold"
                            app:cardCornerRadius="8dp"
                            tools:text="@string/tv_your_token" />
                        <TextView
                            android:id="@+id/tv_token_value_checkout"
                            android:textColor="@color/deep_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_medium"
                            app:cardCornerRadius="8dp"
                            tools:text="500" />

                        <LinearLayout
                            android:id="@+id/layout_enough_balance"
                            android:layout_width="wrap_content"
                            tools:visibility="gone"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_enough_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                app:cardCornerRadius="8dp"
                                android:textColor="@color/red"
                                android:text="@string/tv_checkout_items" />

                            <TextView
                                android:id="@+id/tv_topup_token"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_semibold"
                                app:cardCornerRadius="8dp"
                                android:textColor="@color/green"
                                android:text="@string/tv_please_top_up" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/dividerBottom_checkout_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"
        android:backgroundTint="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/btn_buy_checkout" />

    <Button
        android:id="@+id/btn_buy_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:backgroundTint="@color/deep_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/buy" />

    <TextView
        android:id="@+id/tv_checkout_totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/deep_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_buy_checkout"
        tools:text="@string/total_bayar" />

    <TextView
        android:id="@+id/tv_token_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/deep_blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_buy_checkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_totalprice"
        tools:text="2000" />

</androidx.constraintlayout.widget.ConstraintLayout>