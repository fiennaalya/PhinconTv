<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.dashboard.wishlist.WishlistFragment">

    <TextView
        android:id="@+id/tv_wishlist_count_items"
        android:textColor="@color/deep_blue"
        android:fontFamily="@font/poppins_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:text="@string/tv_count_wishlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider_wishlist_appBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#000000"
        android:backgroundTint="@color/sky_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_wishlist_count_items" />

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/item_wishlist"
        android:id="@+id/rv_wishlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_wishlist_appBar"
        app:layout_constraintBottom_toBottomOf="parent"
 />
</androidx.constraintlayout.widget.ConstraintLayout>