<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox_cart_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/img_cart_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_cart_items" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_cart_items"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkbox_cart_items"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/cover_image_test" />

    <TextView
        android:id="@+id/tv_cart_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/deep_blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_cart_items"
        app:layout_constraintTop_toTopOf="@+id/img_cart_items"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_cart_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/deep_blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_cart_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cart_name"
        tools:text="genre" />


    <ImageView
        android:id="@+id/img_coin_cart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_coin"
        app:layout_constraintStart_toStartOf="@+id/tv_cart_name"
        app:layout_constraintTop_toTopOf="@id/tv_cart_price" />

    <TextView
        android:id="@+id/tv_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/deep_blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_coin_cart"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_genre"
        tools:text="Price" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cart_price"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>