<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_img_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_coming_soon"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/cover_image_test" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title_now_playing"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_img_coming_soon"
        tools:text="@string/title_movie" />

    <ImageView
        android:layout_marginBottom="8dp"
        android:id="@+id/img_movie"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_star_rating"
        app:layout_constraintTop_toBottomOf="@+id/img_star_rating" />

    <TextView
        android:id="@+id/year_and_genre_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_movie"
        app:layout_constraintStart_toEndOf="@+id/img_movie"
        app:layout_constraintTop_toTopOf="@+id/img_movie"
        tools:text="@string/year_and_genre_movie" />

    <TextView
        android:id="@+id/token_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/title_now_playing"
        app:layout_constraintTop_toTopOf="@id/tv_rating_and_total"
        tools:text="@string/token_movie" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@id/token_coming_soon"
        app:layout_constraintEnd_toStartOf="@id/token_coming_soon"
        app:layout_constraintTop_toTopOf="@id/token_coming_soon"
        tools:src="@drawable/ic_coin" />

    <ImageView
        android:id="@+id/img_star_rating"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/img_star"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rating_and_total"
        app:layout_constraintStart_toStartOf="@id/title_now_playing"
        app:layout_constraintTop_toTopOf="@+id/tv_rating_and_total" />

    <TextView
        android:id="@+id/tv_rating_and_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/tv_rating"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/year_and_genre_coming_soon"
        app:layout_constraintStart_toEndOf="@id/img_star_rating"
        app:layout_constraintTop_toBottomOf="@id/title_now_playing" />
</androidx.constraintlayout.widget.ConstraintLayout>