<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_nowplaying"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="@id/img_nowplaying"
        app:layout_constraintEnd_toEndOf="@id/img_nowplaying"
        app:layout_constraintStart_toStartOf="@id/img_nowplaying"
        app:layout_constraintTop_toTopOf="@id/img_nowplaying" />

    <TextView
        android:id="@+id/tv_now_playing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/img_nowplaying"
        tools:text="@string/title_movie" />

    <TextView
        android:id="@+id/year_and_genre_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_now_playing_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_now_playing_title"
        tools:text="@string/year_and_genre_movie" />

    <ImageView
        android:id="@+id/img_star_rating"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/img_star"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_now_playing_title"
        app:layout_constraintTop_toTopOf="@+id/tv_rating_and_total" />

    <TextView
        android:id="@+id/tv_rating_and_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/tv_rating"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/img_star_rating"
        app:layout_constraintTop_toBottomOf="@id/year_and_genre_coming_soon" />
</androidx.constraintlayout.widget.ConstraintLayout>