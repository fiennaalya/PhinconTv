<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.dashboard.setting.payment.PaymentFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_back_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#003366"
        android:contentDescription="@string/no_text"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_arrow_white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/deep_blue"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/divider_payment_appBar"
        app:layout_constraintStart_toEndOf="@id/cv_back_payment"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tv_payment" />

    <View
        android:id="@+id/divider_payment_appBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#000000"
        android:backgroundTint="@color/sky_blue"
        app:layout_constraintTop_toBottomOf="@+id/cv_back_payment" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_payment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_payment_appBar"
        tools:listitem="@layout/item_payment_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>